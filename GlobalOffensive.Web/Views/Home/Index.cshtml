@model IEnumerable<GlobalOffensive.Models.Tournament>

<h2>Tournament Details</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoOfTeamsParticipating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PricePool)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ValueFor(modelItem => item.StartDate, "{0:dd/MM/yyyy hh:mm}")
            </td>
            <td>
                @Html.ValueFor(modelItem => item.EndDate, "{0:dd/MM/yyyy hh:mm}")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoOfTeamsParticipating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePool)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>